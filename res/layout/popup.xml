<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/popup"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
 <TextView
        android:id="@+id/popupName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="@string/bakedbrie" />
 
  <ImageView
      android:id="@+id/popupImage"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@+id/popupName"
      android:layout_marginTop="20dp"
      android:layout_marginLeft="40dp"
      android:src="@drawable/bakedbrie" />

  <TextView
      android:id="@+id/popupCost"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignBottom="@+id/popupImage"
      android:layout_marginBottom="45dp"
      android:layout_toRightOf="@+id/popupImage"
      android:gravity="center"
      android:text="@string/individual_cost"
       />

  <Button
      android:id="@+id/popup_choosebutton"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignRight="@+id/popupName"
      android:layout_below="@+id/popupImage"
      android:layout_marginTop="38dp"
      android:text="@string/choosebutton" />

  <Button
      android:id="@+id/popup_cancelbutton"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignBottom="@+id/popupName"
      android:layout_alignParentRight="true"
      android:layout_marginRight="18dp"
      android:text="@string/cancelbutton" />

  <View
      android:layout_width="wrap_content"
      android:layout_height="1dp"
      android:layout_alignLeft="@+id/popupImage"
      android:layout_alignRight="@+id/popup_cancelbutton"
      android:layout_below="@+id/popupName"
      android:background="@android:color/darker_gray" />

</RelativeLayout>

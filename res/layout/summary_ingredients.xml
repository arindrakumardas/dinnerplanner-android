<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ScrollView1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/ing_sum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ingredients"
        android:textSize="30sp" />
    <TextView
        android:id="@+id/summary_num_guests"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/ing_sum"
        android:layout_alignBottom="@+id/ing_sum"
        android:layout_alignParentRight="true"
        android:textSize="15sp" />

    <ScrollView
	    android:layout_width="match_parent"
	    android:layout_height="fill_parent"
	    android:layout_alignLeft="@+id/ing_sum"
	    android:layout_below="@+id/ing_sum">
        <TextView
	        android:id="@+id/selected_ingredients_summary"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	         />
    </ScrollView>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<GridLayout 
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/GridLayout1"
    android:layout_width="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:layout_height="match_parent"
    android:columnCount="5"
    android:rowCount="10"
    android:orientation="vertical" xmlns:android="http://schemas.android.com/apk/res/android">
    

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="3"
        android:layout_row="0"
        android:text="@string/cost" />

    <TextView
        android:id="@+id/Participants"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="top"
        android:layout_row="0"
        android:text="@string/participants" />
    
    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="85dp"
        android:layout_height="28dp"
        android:layout_column="1"
        android:layout_row="0"
        android:entries="@array/numberOfGuests"
        android:prompt="@string/number_of_guests" />

    <TextView
        android:id="@+id/ChooseMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_row="1"
        android:textSize="24sp"
        android:text="@string/choose_menu" />
    
    <View
    android:layout_width="fill_parent"
    android:layout_height="1dp"
    android:background="@android:color/darker_gray"
    android:layout_columnSpan="4"/>

    <TextView
        android:id="@+id/Starter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="3"
        android:text="@string/starter"
        android:textSize="12sp" />
    
    <ImageView
        android:id="@+id/startdish1"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_column="0"
        android:layout_row="4"
        android:src="@drawable/bakedbrie" 
        android:contentDescription="@string/bakedbrie" />
   

    <ImageView
        android:id="@+id/startdish2"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_column="1"
        android:layout_row="4"
        android:src="@drawable/toast" />

    <TextView
        android:id="@+id/MainCourse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="5"
        android:text="@string/main_course" />

    <ImageView
        android:id="@+id/maindish1"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_column="0"
        android:layout_row="6"
        android:src="@drawable/meatballs" />

    <TextView
        android:id="@+id/Dessert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="7"
        android:text="@string/dessert" />

    <ImageView
        android:id="@+id/dessert1"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_column="0"
        android:layout_row="8"
        android:src="@drawable/icecream" />

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_columnSpan="2"
        android:layout_marginLeft="30dp"
        android:layout_row="9"
        android:layout_gravity="center"
        android:text="@string/createbutton" />

    
</GridLayout>